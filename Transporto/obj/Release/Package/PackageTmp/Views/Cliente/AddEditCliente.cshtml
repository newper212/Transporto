@model Transporto.ViewModels.Cliente.AddEditClienteViewModel
@{
    ViewBag.Title = Model.ClienteId.HasValue ? "Editar Cliente" : "Nuevo Cliente";
}

@Html.HiddenFor(x => x.ClienteId)

<div class="row">
    <div class="col-12">
        <div class="card-box">
            <h4 class="m-t-0 header-title"><b>Datos Principales</b></h4>
            <p class="text-muted m-b-30 font-14">
                Datos principales para <code>@(Model.ClienteId.HasValue ? "editar" : "crear")</code> un cliente.
            </p>

            <div class="row">
                <div class="col-12">
                    <div class="p-20">
                        <form class="form-horizontal" role="form" method="post">
                            <div class="form-group row">
                                @Html.LabelFor(x => x.Nombre, new { @class = "col-2 col-form-label" })
                                <div class="col-10">
                                    @Html.TextBoxFor(x => x.Nombre, new { @class = "form-control" })
                                    @*Html.ValidationMessageFor(x => x.Nombres)*@
                                </div>
                            </div>
                            <div class="form-group row">
                                @Html.LabelFor(x => x.Ruc, new { @class = "col-2 col-form-label" })
                                <div class="col-10">
                                    @Html.TextBoxFor(x => x.Ruc, new { @class = "form-control" })
                                    @*@Html.ValidationMessageFor(x => x.ApellidoPaterno)*@
                                </div>
                            </div>
                            <div class="form-group row">
                                @Html.LabelFor(x => x.Telefono, new { @class = "col-2 col-form-label" })
                                <div class="col-10">
                                    @Html.TextBoxFor(x => x.Telefono, new { @class = "form-control" })
                                    @*Html.ValidationMessageFor(x => x.ApellidoMaterno)*@
                                </div>
                            </div>
                            <div class="form-group row">
                                @Html.LabelFor(x => x.Direccion, new { @class = "col-2 col-form-label" })
                                <div class="col-10">
                                    @Html.TextBoxFor(x => x.Direccion, new { @class = "form-control" })
                                    @*Html.ValidationMessageFor(x => x.DNI)*@
                                </div>
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(x => x.DistritoId, new { @class = "col-2 col-form-label" })
                                <div class="col-10">
                                    @Html.DropDownListFor(x => x.DistritoId, new SelectList(Model.LstDistrito, "DistritoId", "Nombre"), "[- Seleccionar -]", new { @class = "select2" })
                                    @*Html.ValidationMessageFor(x => x.DistritoId)*@
                                </div>
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(x => x.Observaciones, new { @class = "col-2 col-form-label" })
                                <div class="col-10">
                                    @Html.TextBoxFor(x => x.Observaciones, new { @class = "form-control" })
                                    @*Html.ValidationMessageFor(x => x.ApellidoMaterno)*@
                                </div>
                            </div>
                            
                            <div class="form-group text-right m-b-0">
                                <button class="btn btn-primary waves-effect waves-light" type="submit"><i class="ti-save"></i> Guardar</button>
                                <a href="@Url.Action("ListClientes", "Cliente")" class="btn btn-inverse waves-effect m-l-5"><i class="ti-back-left"></i> Cancelar</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



