@model Transporto.ViewModels.Cliente.ListClienteViewModel
@{
    ViewBag.Title = "Listado de Clientes";
}

@section Breadcrumbs{
}

<div class="row">
    <div class="col-lg-12">
        <div class="card-box">
            <h4 class="m-t-0 header-title">Clientes</h4>
            <p class="text-muted font-14 m-b-20">
                Listado de Clientes registrados en <code>Tempano</code>.
            </p>

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th class="col-md-3">Nombre</th>
                        <th class="col-md-1">RUC</th>
                        <th class="col-md-1">Teléfono</th>
                        <th class="col-md-3">Dirección</th>
                        <th class="col-md-1">Estado</th>
                        <th class="col-md-2">Opciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cliente in Model.LstCliente)
                    {
                        <tr>
                            <td class="col-md-3">@cliente.Nombre</td>
                            <td class="col-md-1">@cliente.Ruc</td>
                            <td class="col-md-1">@cliente.Telefono</td>
                            <td class="col-md-3">@cliente.Direccion</td>
                            <td class="col-md-1">@cliente.Estado</td>
                            <td class="actions col-md-2">
                                <a style="color: #797979; font-size:initial; cursor: pointer;" href="@Url.Action("AddEditCliente", "Cliente", new { ClienteId = cliente.ClienteId })" class="on-default"><i class="ti-pencil"></i></a>&nbsp;&nbsp;&nbsp;
                                <a style="color: red; font-size:initial; cursor: pointer;" @Data.ModalLink("_DeleteCliente", "Cliente", new { ClienteId = cliente.ClienteId }) class="on-default"><i class="ti-trash"></i></a>&nbsp;&nbsp;&nbsp;
                                <a style="color: #007bff; font-size:initial; cursor: pointer;" @Data.ModalLink("_ViewCliente", "Cliente", new { ClienteId = cliente.ClienteId }) class="on-default"><i class="ti-eye"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="row">
                <div class="col-md-4" style="margin: 25px 0;">
                    <a href="@Url.Action("AddEditCliente", "Cliente")" class="btn btn-sm btn-primary"><i class="ti-plus"></i> Nuevo</a>
                </div>
                <div class="col-md-8 text-right">
                    @Html.PagedListPager(Model.LstCliente, page => Url.Action("ListClientes", new { p = page, Nombre = Model.NombreCliente }), ConstantHelpers.Bootstrap3Pager)
                </div>
            </div>
        </div>
    </div>
</div>

