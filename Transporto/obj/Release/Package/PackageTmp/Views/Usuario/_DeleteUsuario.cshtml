@model Transporto.ViewModels.Usuario._DeleteUsuarioViewModel
@{
    Layout = ConstantHelpers.LAYOUT.MODAL_LAYOUT_PATH;
    ViewBag.Title = "Eliminar   Usuario";
    ViewBag.PageIcon = "ti-trash";
    ViewBag.Form = new ModalFormHelpers("_DeleteUsuario", "Usuario", FormMethod.Post);
}

@Html.HiddenFor(x => x.UsuarioId)

<p>¿Está seguro de eliminar el Usuario <b>@Model.Nombres</b>?</p>

@section Footer{
    <button type="submit" class="btn btn-primary btn-xs"><i class="ti-check"></i>&nbsp;Aceptar</button>
}
