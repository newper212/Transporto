@model Transporto.ViewModels.Usuario.AddEditUsuarioViewModel

@{
    ViewBag.Title = Model.UsuarioId.HasValue ? "Editar Usuario" : "Nuevo Usuario";
}

@Html.HiddenFor(x => x.UsuarioId)

<div class="row">
    <div class="col-12">
        <div class="card-box">
            <h4 class="m-t-0 header-title"><b>Datos Principales</b></h4>
            <p class="text-muted m-b-30 font-14">
                Datos principales para <code>@(Model.UsuarioId.HasValue ? "editar" : "crear")</code> un usuario.
            </p>

            <div class="row">
                <div class="col-12">
                    <div class="p-20">
                        <form class="form-horizontal" role="form" method="post">
                            <div class="form-group row">
                                @Html.LabelFor(x => x.Nombres, new { @class = "col-2 col-form-label" })
                                <div class="col-10">
                                    @Html.TextBoxFor(x => x.Nombres, new { @class = "form-control" })
                                    @*Html.ValidationMessageFor(x => x.Nombres)*@
                                </div>
                            </div>
                            <div class="form-group row">
                                @Html.LabelFor(x => x.ApellidoPaterno, new { @class = "col-2 col-form-label" })
                                <div class="col-10">
                                    @Html.TextBoxFor(x => x.ApellidoPaterno, new { @class = "form-control" })
                                    @*Html.ValidationMessageFor(x => x.Nombres)*@
                                </div>
                            </div>
                            <div class="form-group row">
                                @Html.LabelFor(x => x.ApellidoMaterno, new { @class = "col-2 col-form-label" })
                                <div class="col-10">
                                    @Html.TextBoxFor(x => x.ApellidoMaterno, new { @class = "form-control" })
                                    @*@Html.ValidationMessageFor(x => x.ApellidoPaterno)*@
                                </div>
                            </div>
                            <div class="form-group row">
                                @Html.LabelFor(x => x.Codigo, new { @class = "col-2 col-form-label" })
                                <div class="col-10">
                                    @Html.TextBoxFor(x => x.Codigo, new { @class = "form-control" })
                                    @*Html.ValidationMessageFor(x => x.ApellidoMaterno)*@
                                </div>
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(x => x.Password, new { @class = "col-2 col-form-label" })
                                <div class="col-10">
                                    @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @type = "password" })
                                    @*Html.ValidationMessageFor(x => x.ApellidoMaterno)*@
                                </div>
                            </div>
                            

                            <div class="form-group text-right m-b-0">
                                <button class="btn btn-primary waves-effect waves-light" type="submit"><i class="ti-save"></i> Guardar</button>
                                <a href="@Url.Action("ListUsuarios", "Usuario")" class="btn btn-inverse waves-effect m-l-5"><i class="ti-back-left"></i> Cancelar</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
