@model Transporto.ViewModels.Vehiculo.AddEditVehiculoViewModel

@{
    ViewBag.Title = Model.VehiculoId.HasValue ? "Editar Vehiculo" : "Nuevo Vehiculo"; ;
}

@Html.HiddenFor(x => x.VehiculoId)

<div class="row">
    <div class="col-12">
        <div class="card-box">
            <h4 class="m-t-0 header-title"><b>Datos Principales</b></h4>
            <p class="text-muted m-b-30 font-14">
                Datos principales para <code>@(Model.VehiculoId.HasValue ? "editar" : "crear")</code> un vehiculo.
            </p>
            <div class="row">
                <div class="col-12">
                    <div class="p-20">
                        <form class="form-horizontal" role="form" method="post">
                            <div class="form-group row">
                                @Html.LabelFor(x => x.Marca, new { @class = "col-2 col-form-label" })
                                <div class="col-10">
                                    @Html.TextBoxFor(x => x.Marca, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.Marca)
                                </div>
                            </div>
                            <div class="form-group row">
                                @Html.LabelFor(x => x.Modelo, new { @class = "col-2 col-form-label" })
                                <div class="col-10">
                                    @Html.TextBoxFor(x => x.Modelo, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.Modelo)
                                </div>
                            </div>
                            <div class="form-group row">
                                @Html.LabelFor(x => x.Tipo, new { @class = "col-2 col-form-label" })
                                <div class="col-10">
                                    @Html.TextBoxFor(x => x.Tipo, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.Tipo)
                                </div>
                            </div>
                            <div class="form-group row">
                                @Html.LabelFor(x => x.Placa, new { @class = "col-2 col-form-label" })
                                <div class="col-10">
                                    @Html.TextBoxFor(x => x.Placa, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.Placa)
                                </div>
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(x => x.FechaVencimientoSOAT, new { @class = "col-2 col-form-label" })
                                <div class="col-10">
                                    @Html.TextBoxFor(x => x.FechaVencimientoSOAT, "{0:dd/MM/yyyy}", new { @class = "form-control datepicker" })
                                    @*Html.ValidationMessageFor(x => x.FechaNacimiento)*@
                                </div>
                            </div>

                            <div class="form-group text-right m-b-0">
                                <button class="btn btn-primary waves-effect waves-light" type="submit"><i class="ti-save"></i> Guardar</button>
                                <a href="@Url.Action("ListVehiculos", "Vehiculo")" class="btn btn-inverse waves-effect m-l-5"><i class="ti-back-left"></i> Cancelar</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        $(function () {
            $('.datepicker').datepicker({
                format: 'mm/dd/yyyy',
                language: 'es'
            });
        })
    </script>
}