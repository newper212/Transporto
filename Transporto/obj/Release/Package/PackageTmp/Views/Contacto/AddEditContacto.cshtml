@model Transporto.ViewModels.Contacto.AddEditContactoViewModel
@{
    ViewBag.Title = Model.ContactoId.HasValue ? "Editar Contacto" : "Nuevo Contacto";
}

@Html.HiddenFor(x => x.ContactoId)


<div class="row">
    <div class="col-12">
        <div class="card-box">
            <h4 class="m-t-0 header-title"><b>Datos Principales</b></h4>
            <p class="text-muted m-b-30 font-14">
                Datos principales para <code>@(Model.ContactoId.HasValue ? "editar" : "crear")</code> un contacto.
            </p>

            <div class="row">
                <div class="col-12">
                    <div class="p-20">
                        <form class="form-horizontal" role="form" method="post">
                            <div class="form-group row">
                                @Html.LabelFor(x => x.Nombres, new { @class = "col-2 col-form-label" })
                                <div class="col-10">
                                    @Html.TextBoxFor(x => x.Nombres, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.Nombres, null, new { @class = "text-danger" })
                                    @*Html.ValidationMessageFor(x => x.Nombres)*@
                                </div>
                            </div>
                            <div class="form-group row">
                                @Html.LabelFor(x => x.Apellidos, new { @class = "col-2 col-form-label" })
                                <div class="col-10">
                                    @Html.TextBoxFor(x => x.Apellidos, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.Apellidos, null, new { @class = "text-danger" })
                                    @*@Html.ValidationMessageFor(x => x.ApellidoPaterno)*@
                                </div>
                            </div>
                            <div class="form-group row">
                                @Html.LabelFor(x => x.Telefono, new { @class = "col-2 col-form-label" })
                                <div class="col-10">
                                    @Html.TextBoxFor(x => x.Telefono, new { @class = "form-control" })
                                    @*Html.ValidationMessageFor(x => x.ApellidoMaterno)*@
                                </div>
                            </div>
                            <div class="form-group row">
                                @Html.LabelFor(x => x.Celular, new { @class = "col-2 col-form-label" })
                                <div class="col-10">
                                    @Html.TextBoxFor(x => x.Celular, new { @class = "form-control" })
                                    @*Html.ValidationMessageFor(x => x.DNI)*@
                                </div>
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(x => x.Email, new { @class = "col-2 col-form-label" })
                                <div class="col-10">
                                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                                    @*Html.ValidationMessageFor(x => x.DNI)*@
                                </div>
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(x => x.ClienteId, new { @class = "col-2 col-form-label" })
                                <div class="col-10">
                                    @Html.DropDownListFor(x => x.ClienteId, new SelectList(Model.LstCliente, "ClienteId", "Nombre"), "[- Seleccionar -]", new { @class = "select2" })
                                    @*Html.ValidationMessageFor(x => x.DistritoId)*@
                                </div>
                            </div>

                            <div class="form-group text-right m-b-0">
                                <button class="btn btn-primary waves-effect waves-light" type="submit"><i class="ti-save"></i> Guardar</button>
                                <a href="@Url.Action("ListContactos", "Contacto")" class="btn btn-inverse waves-effect m-l-5"><i class="ti-back-left"></i> Cancelar</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
