
@model Transporto.ViewModels.Contactos.ListContactosViewModel
@{

    //ViewBag.Title = "Contactos :";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Contactos</h2>

<div class="col-md-12">
    <div class="card-box">
        <a class="btn btn-primary btn-sm pull-right" href="@Url.Action("AddEditContacto", "Contacto")">Nuevo</a>
        <table class="table table-striped table-condensed">
            <thead>
                <tr>
                    <th>DNI</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Celular</th>
                    <th>Email</th>
                    <th>Empresa</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var contacto in Model.LstContacto)
            {
                    <tr>
                        <td> @contacto.Dni</td>
                        <td> @contacto.Nombre</td>
                        <td> @contacto.Apellido</td>
                        <td> @contacto.Celular</td>
                        <td> @contacto.EmailContacto </td>
                        <td> @contacto.EmpresaCliente.NombreEmpresa</td>
                        <td> <a class="btn btn-primary btn-sm pull-right" href="@Url.Action("AddEditContacto", "Contacto", new { @ContactoId = @contacto.IDContactos })">Editar</a></td>
                        <td> <a class="btn btn-danger btn-sm pull-right" @Data.ModalLink("_DeleteContactoViewModelcs", "Contacto", new { @ContactoId = @contacto.IDContactos })>Eliminar</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


