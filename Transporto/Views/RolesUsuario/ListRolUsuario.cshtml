@model Transporto.ViewModels.RoldeUsuario.ListRoldUsuarioViewModel
@{
    ViewBag.Title = "Información del Rol de Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Rol</h2>

<div class="col-md-12">
    <div class="card-box">
        <a class="btn btn-primary btn-sm" href="@Url.Action("AddEditRolUsuario", "RolesUsuario")">Nuevo</a>
        <table class="table table-striped table-condensed table-responsive">
            <thead>
                <tr>
                    <th>Usuario</th>
                    <th>Rol</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.LstRolDusuario)
                {
                    <tr>
                        <td> @item.Usuario.Codigo</td>
                        <td> @item.Rol.Rol1</td>
                        <td> <a class="btn btn-primary btn-sm pull-right" href="@Url.Action("AddEditRolUsuario", "RolesUsuario", new { @RolId = item.IDRol })">Editar</a></td>
                        <td> <a class="btn btn-danger btn-sm pull-right" @Data.ModalLink("_DeleteRolUsuario", "RolesUsuario", new { @RolId = item.IDRol })>Eliminar</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>