@model Transporto.ViewModels.Rol.ListRolViewModel
@{
    ViewBag.Title = "Información del Rol";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Rol</h2>

<div class="col-md-12">
    <div class="card-box">
        <a class="btn btn-primary btn-sm" href="@Url.Action("AddEditRol", "Rol")">Nuevo</a>
        <table class="table table-striped table-condensed table-responsive">
            <thead>
                <tr>
                    <th>Rol</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.LstRol)
                {
                    <tr>
                        <td> @item.Rol1 </td>
                        <td> <a class="btn btn-primary btn-sm pull-right" href="@Url.Action("AddEditRol", "Rol", new { @RolId = item.IDRol })">Editar</a></td>
                        <td> <a class="btn btn-danger btn-sm pull-right" @Data.ModalLink("_DeleteRolViewModelcs", "Rol", new { @RolId = item.IDRol })>Eliminar</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

