
@model Transporto.ViewModels.Ayudante.ListAyudanteViewModel
@{

    ViewBag.Title = "ListAyudante";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ListAyudante</h2>

<div class="col-md-12">
    <div class="card-box">
        <a class="btn btn-primary btn-sm" href="@Url.Action("AddEditAyudante", "Ayudante")">Nuevo</a>
        <table class="table table-striped table-condensed">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>DNI</th>
                    <th>Direccion</th>
                    <th>Telefono</th>
                    <th>Celular</th>
                    

                </tr>
            </thead>
            <tbody>
                @foreach (var ayudante in Model.LstAyudante)
            {
                    <tr>
                        <td> @ayudante.NombreAyudante</td>
                        <td> @ayudante.ApellidoAyudante</td>
                        <td> @ayudante.DNIAyudante</td>
                        <td> @ayudante.DireccionAyudante</td>
                        <td> @ayudante.TelefonoAyudante</td>
                        <td> @ayudante.CelularAyudante</td>
                        
                        <td> <a class="btn btn-primary btn-sm pull-right" href="@Url.Action("AddEditAyudante", "Ayudante", new { @idAyudante = @ayudante.IDAyudate })">Editar</a></td>
                        <td> <a class="btn btn-danger btn-sm pull-right" @Data.ModalLink("_DeleteAyudanteViewModel", "Ayudante", new { @idAyudante = @ayudante.IDAyudate })>Eliminar</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
