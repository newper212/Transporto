@model Transporto.ViewModels.vehiculo.ListVehiculoViewModel
@{
    ViewBag.Title = "Información del Vehiculo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Vehiculo</h2>

<div class="col-md-12">
    <div class="card-box">
        <a class="btn btn-primary btn-sm" href="@Url.Action("AddEditVehiculo", "Vehiculo")">Nuevo</a>
        <table class="table table-striped table-condensed table-responsive">
            <thead>
                <tr>
                    <th>Marca</th>
                    <th>Modelo</th>
                    <th>Tipo</th>
                    <th>Placa</th>  
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.LstVehiculo)
                {
                    <tr>
                        <td> @item.Marca </td>
                        <td> @item.Modelo</td>
                        <td> @item.Tipo</td>
                        <td> @item.Placa</td>
                        <td> <a class="btn btn-primary btn-sm pull-right" href="@Url.Action("AddEditVehiculo", "Vehiculo", new { @VehiculoId = item.IDVehiculo })">Editar</a></td>
                        <td> <a class="btn btn-danger btn-sm pull-right" @Data.ModalLink("_DeleteVehiculoViewModelcs", "Vehiculo", new { @VehiculoId = item.IDVehiculo })>Eliminar</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

