                <h2 class="title pull-left"><i class="fa fa-list-alt"></i> Listado (@Model.nElementos elementos)</h2>
            </header>*@
        <div class="content-body">
            <!-- Filtros - Inicio -->
            <div class="row">
                <form>
                    @*@using (Html.BeginForm("ListVehiculo", "Vehiculo", FormMethod.Post, new { id = "frmFilters" }))
                        {*@
                    <div class="col-md-12">
                        <!-- Page -->
                        @Html.HiddenFor(x => x.numeroPagina)
                        <div class="col-md-4">
