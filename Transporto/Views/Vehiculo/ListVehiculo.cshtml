                                @Html.LabelFor(x => x.fMarca, new { @class = "form-label" })
                                @Html.TextBoxFor(x => x.fMarca, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                @Html.LabelFor(x => x.fModelo, new { @class = "form-label" })
                                @Html.TextBoxFor(x => x.fModelo, new { @class = "form-control" })
                            </div>
                        </div>
                        @*<div class="col-md-4">
                                <div class="form-group">
                                    @Html.LabelFor(x => x.fEstado, new { @class = "form-label" })
                                    @Html.DropDownListFor(x => x.fEstado, new SelectList(Model.lstEstado, "Value", "Text"), "[-Seleccione-]", new { @class = "form-control" })
