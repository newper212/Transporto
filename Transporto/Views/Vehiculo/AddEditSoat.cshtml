@model Transporto.ViewModels.vehiculo.AddEditSoatViewModel

@{
    ViewBag.Title = "Soat";
}


<div class="col-lg-12">
    <section class="box ">
        <header class="panel_header">
            <h2 class="title pull-left">@(Model.SoatId.HasValue ? "Editar" : "Agregar") Soat</h2>
        </header>
        <div class="content-body">
            <form id="msg_validate" method="post" novalidate="novalidate">
                @Html.AntiForgeryToken()
                @Html.HiddenFor(x => x.SoatId)
                @Html.HiddenFor(x => x.vehiculoId)
                <div class="form-group">
                    <div class="row">

                        <div class="col-xs-4">
                            @Html.LabelFor(x => x.numeroSoat, new { @class = "control-label" })
                            <div class="controls">
                                @Html.TextBoxFor(x => x.numeroSoat, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.numeroSoat)
                            </div>
                        </div>

                        <div class="col-xs-4">
                            @Html.LabelFor(x => x.fechaEmision, new { @class = "control-label" })
                            <div class="controls">
                                @Html.DateTextBoxFor(x => x.fechaEmision, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.fechaEmision)
                            </div>
                        </div>

                        <div class="col-xs-4">
                            @Html.LabelFor(x => x.fechaCaducidad, new { @class = "control-label" })
                            <div class="controls">
                                @Html.DateTextBoxFor(x => x.fechaCaducidad, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.fechaCaducidad)
                            </div>
                        </div>


                    </div>
                </div>


                <div class="form-group">
                    <div class="row">
                        <div class="pull-right">
                            <button type="submit" class="btn btn-primary">Guardar</button>
                            <button type="button" class="btn" onclick="window.history.back()"><i class="fa fa-arrow-left" aria-hidden="true"></i> Salir</button>
                        </div>
                    </div>
                </div>



            </form>
        </div>
    </section>
</div>

@section Scripts
{

    <script type="text/javascript">



    $(document).ready(function () {
        $('.datepicker').datepicker({
            format: "dd/mm/yyyy"
        });
    });

    </script>

}
