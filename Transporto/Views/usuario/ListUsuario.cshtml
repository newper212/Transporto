@model Transporto.ViewModels.usuario.ListUsuarioViewModel
@{
    ViewBag.Title = "Lista de usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Usuario</h2>

<div class="col-md-6">
    <div class="card-box">
        <a class="btn btn-primary btn-sm" href="@Url.Action("AddEditUsuario", "Usuario")">Nuevo</a>
        <table class="table table-striped table-condensed">
            <thead>
                <tr>
                    <th>Usuario</th>
                    <th>Comtraseña</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>DNI</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var @usuario in Model.LstUsuario)
            {
                    <tr>
                        <td> @usuario.Codigo</td>
                        <td> @usuario.Comtrasena</td>
                        <td> @usuario.Nombre</td>
                        <td> @usuario.Apellido</td>
                        <td> @usuario.Dni</td>
                        <td> <a class="btn btn-primary btn-sm pull-right" href="@Url.Action("AddEditUsuario", "Usuario", new { @usuarioId = @usuario.IdUsuario })">Editar</a></td>
                        <td> <a class="btn btn-danger btn-sm pull-right" @Data.ModalLink("_DeleteUsuario", "Usuario", new { @usuarioId = @usuario.IdUsuario })>Eliminar</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


